<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/ic_bg5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:background="@mipmap/ic_weblibrary_qidian"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="起点中文网"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_color3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="http://m.qiandian.com"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:autoLink="web"
            android:textColor="@color/text_color3"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdada"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_weblibrary_hongxiu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="红袖添香"
            android:id="@+id/textView8"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_color3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="http://m.hongxiu.com"
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal"
            android:autoLink="web"
            android:textColor="@color/text_color3"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdada"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_weblibrary_shubao"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="书包"
            android:id="@+id/textView11"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_color3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="网址：http://m.bookbao.com"
            android:id="@+id/textView12"
            android:layout_gravity="center_horizontal"
            android:autoLink="web"
            android:textColor="@color/text_color3"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdada"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_weblibrary_feiku"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="无限小说网"
            android:id="@+id/textView13"
            android:textColor="@color/text_color3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="http://m.55x.com"
            android:id="@+id/textView14"
            android:autoLink="web"
            android:textColor="@color/text_color3"/>
    </LinearLayout>
</ScrollView>
